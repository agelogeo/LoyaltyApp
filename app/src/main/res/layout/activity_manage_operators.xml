<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_operator_deletion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.loyaltyapp.ManageOperators">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/operator_edit_Text"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:hint="Search for an operator. . ." />

            <Button
                android:text="@string/createOperatorBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_operator_btn"
                android:textColor="@color/AppColor"
                android:background="@drawable/red_style_button" />

            <TextView
                android:text="Please wait.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/operatorWaitText"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:visibility="gone" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/operators_listview" />

        </LinearLayout>
</RelativeLayout>
