<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_database_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.admin.loyaltyapp.DatabaseStats">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/ic_sort_black_48dp"
        android:id="@+id/imageView6"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/filter_entry"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        android:entries="@array/filter_array" />

    <TextView
        android:text="Please wait . . ."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/db_waitText"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/filter_entry" />

    <ListView
        android:layout_width="330dp"
        android:layout_height="551dp"
        android:id="@+id/db_list_view"
        app:layout_constraintTop_toBottomOf="@+id/filter_entry"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>
