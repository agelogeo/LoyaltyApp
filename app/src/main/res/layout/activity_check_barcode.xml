<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_barcode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.admin.loyaltyapp.CheckBarcodeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="ID : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBarcodeView"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Name : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkNameView"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:text="Phone : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkPhoneView"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:text="Stamps : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkStampsView"
                android:layout_weight="1"
                android:textSize="18sp" />

            <Button
                android:text="ADD STAMP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:textColor="@color/AppColor"
                android:background="@drawable/red_style_button" />

            <Button
                android:text="REMOVE STAMP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:textColor="@color/AppColor"
                android:background="@drawable/red_style_button" />

        </LinearLayout>
    </ScrollView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/check_coupons_list" />

</LinearLayout>
